@PACKAGE_INIT@
include(CMakeFindDependencyMacro)
find_dependency(MPI)
find_dependency(GridTools @GridTools_VERSION@)
if (@GHEX_USE_UCP@)
  set(GHEX_USE_UCP ON)
  set(UCP_LIBRARY    @UCP_LIBRARIES@)
  set(UCP_INCLUDE_DIR @UCP_INCLUDE_DIRS@)
  if (@GHEX_USE_PMIX@)
    set(PMIX_LIBRARY    @PMIX_LIBRARIES@)
    set(PMIX_INCLUDE_DIR @PMIX_INCLUDE_DIRS@)
    set(GHEX_USE_PMIX ON)
  else()
    set(GHEX_USE_PMIX OFF)
  endif()
else()
  set(GHEX_USE_UCP OFF)
  set(GHEX_USE_PMIX OFF)
endif()
find_dependency(UCP)
include(${CMAKE_CURRENT_LIST_DIR}/GHEX-targets.cmake)
